@page
@model travelAgency.Pages.travel.TourPageModel
@{
    ViewData["Title"] = "Tour Page";
}

<div class="main-scrin">
    <img class="first-img timg" src="/images/@Model.Tour.Imgg" alt="Tour Image">
    <div class="tblok">
        <h5>@Model.Tour.Country</h5>
        <h4>@Model.Tour.Date</h4>
        <h4>@Model.Tour.AmountOfPeople tourists & 1 guide</h4> 
    </div>
  
</div>

<h2>[OUR ROUTE]</h2>
@foreach (var item in Model.ListDays)
{
    if (@item.number % 2 == 1)
    {
        <div class="days-item"> 
            <img src="/images/@Html.DisplayFor(m=> item.Dimg)" alt="Image of place">
            <h4>@Html.DisplayFor(m=> item.description)</h4>   
        </div>
    }
    else
    {
        <div class="days-item"> 
            <h4>@Html.DisplayFor(m=> item.description)</h4> 
            <img src="/images/@Html.DisplayFor(m=> item.Dimg)" alt="Image of place">  
        </div>
    }

    
}
<div class="tprice">
    <p>Price - </p>
    <p>@Model.Tour.price $</p>
</div>

<div class="tcontact">
    <div>
        <h3>Need more information?</h3>
        <h6>Contact us to receive more information about tours</h6>
    </div>
    <div>
        <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label></label>
                    </div>
                    <div class="col-sm-4">
                        <input class="form-control" />
                    </div>
                   <span asp-validation-for="Tour.Country" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label aps-for="Book.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Tour.Date" class="form-control" />
                    </div>

                </div>
            </div>
             <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label aps-for="Book.ISBN"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Tour.Imgg" class="form-control" />
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary form-control"/>
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
                    </div>
                </div>
            </div>
         </div>
    </form>
    </div>
</div>

